    "url": "https://github.com/nearform/udaru/issues"
  },
  "bin": {
    "udaru": "index.js"
  },
  "engines": {
    "node": ">=6.0.0"
  },
  "keywords": [
    "access",
    "authorization",
    "iam",
    "policies",
    "pbac",
    "roles",
    "rbac",
    "permissions",
    "user management",
    "acl"
  ],
  "scripts": {
    "bench": "node ./bench/util/runner.js",
    "bench:volume": "node ./bench/util/volumeRunner.js",
    "bench:load-volume": "npm run pg:init-volume-db && node ./bench/util/volumeRunner.js",
    "coverage":  "echo  ️",
    "depcheck": "npx depcheck",
    "pg:init": "npx --no-install udaru-init && npm run pg:migrate",
    "pg:init-test-db": "npm run pg:init && npx --no-install udaru-loadTestData",
    "pg:init-volume-db": "npm run pg:init-test-db && ./bench/util/loadVolumeData.js",
    "pg:migrate": "npx --no-install udaru-migrate --version=max",
    "start": "node ./index.js",
    "test": "echo ", 
    "pretest:security": "napa sqlmapproject/sqlmap",
    "test:security": "node ./security/runner.js",
    "test:example-6": "echo '\\033[33mtest:example requires Node.js greater than 8.9.0. Exiting without errors.\\033[0m'",
    "test:example-current": "npm run pg:init-test-db && UDARU_SERVICE_logger_pino_level=silent lab -m 10000",
    "test:example": "npm run test:example-$(node -v | grep '^v6' >> /dev/null && echo '6' || echo 'current')"
  },
  "remarkConfig": {
    "plugins": [
      "remark-preset-lint-recommended"
    ]
  },
  "pre-commit": [
    "test:commit-check"
  ],
  "dependencies": {
    "@nearform/udaru-core": "^5.1.0",
    "@nearform/udaru-hapi-16-plugin": "^5.1.0",
    "async": "^2.6.0",
    "hapi": "^16.6.2",
    "hapi-pino": "^2.0.0",
    "hapi-swagger": "^7.9.1",
    "inert": "^4.0.3",
    "vision": "^4.1.1"
  },
  "devDependencies": {
    "autocannon": "^2.1.1",
    "bloomrun": "^4.1.0",
    "chalk": "^2.3.2",
    "depcheck": "^0.6.9",
    "jsonfile": "^4.0.0",
    "minimist": "^1.2.0",
    "napa": "^3.0.0",
    "npx": "^10.0.1",
    "pg": "^7.4.1",
    "code": "^5.2.0",
    "lab": "^15.4.1",
    "lodash": "^4.17.5"
  },
  "standard": {
    "ignore": [
      "docs/*"
    ]
  },
  "publishConfig": {
    "access": "public"
  }
}
